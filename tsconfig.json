{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es5",
        "declaration": true,
        "sourceMap": true,
        "lib": ["es6", "dom", "es2016", "es2017"],
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "dist"]
}
